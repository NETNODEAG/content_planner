{
  "name": "content_calendar",
  "version": "0.0.1",
  "description": "CSS and JS build tool for Content calendar",
  "author": "Martin Penev",
  "scripts": {
    "build-css": "node-sass --source-map true --include-path scss src/scss/calendar.scss dist/css/calendar.css",
    "watch-css": "nodemon -e scss -x 'npm run build-css'",
    "all": "parallelshell 'npm run serve' 'npm run watch-css'"
  },
  "devDependencies": {
    "node-sass": "^4.0.0",
    "nodemon": "^1.0.0",
    "parallelshell": "^3.0.0"
  }
}
